{
  "name": "pomodoro-logger",
  "version": "0.0.1",
  "description": "pomodoro project-time-logger",
  "main": "./dist/main.js",
  "scripts": {
    "clean": "rm ./dist/*.worker.js",
    "prebuild": "npm run clean",
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-renderer-dev": "cross-env NODE_ENV=development webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js &&cross-env NODE_OPTIONS=--experimental-worker electron ./dist/main.js",
    "start-dev": "cross-env NODE_ENV=development START_HOT=1 npm run start-renderer-dev",
    "prestart": "npm run build",
    "start": "electron .",
    "lint": "tslint '{src,test,mocks}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "test": "jest",
    "pretest:e2e": "npm run build",
    "test:e2e": "jest '(\\/test\\/e2e/).*'",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,mocks}/**/*.{js,ts,tsx,json,css,scss,md}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ],
    "{src,test,mocks}/**/*.{js,ts,tsx}": [
      "tslint --project ./tsconfig.json --fix",
      "git add"
    ]
  },
  "build": {
    "productName": "Pomodoro Logger",
    "appId": "com.electron.time-logger",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "./dist/*",
      "./package.json"
    ],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:rem2016/TimeLogger.git"
  },
  "author": {
    "name": "Zixuan Chen",
    "email": "remch183@outlook.com"
  },
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/rem2016/TimeLogger/issues"
  },
  "homepage": "https://github.com/rem2016/TimeLogger",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hot-loader/react-dom": "^16.8.6",
    "@jest-runner/electron": "^2.0.2",
    "@svgr/webpack": "^4.3.2",
    "@types/classnames": "^2.2.9",
    "@types/echarts": "^4.1.9",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/enzyme": "^3.10.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.13",
    "@types/lodash": "^4.14.135",
    "@types/nedb": "^1.8.7",
    "@types/react": "^16.8.18",
