        "@types/classnames": "^2.2.9",
        "@types/echarts": "^4.1.9",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/enzyme": "^3.10.1",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.13",
        "@types/lodash": "^4.14.135",
        "@types/marked": "^0.6.5",
        "@types/nedb": "^1.8.7",
        "@types/react": "^16.8.18",
        "@types/react-beautiful-dnd": "^11.0.3",
